generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  username String @db.VarChar(100)
  email    String @unique @db.VarChar(150)
  password String @db.VarChar(100)
  role     String @default("TALENT") @db.VarChar(20)

  todos              Todo[]
  posts              Post[]
  eventRegistrations EventRegistration[]
  bountyAssignments  BountyAssignment[]

  @@map("users")
}

model Todo {
  id          Int    @id @default(autoincrement())
  title       String @db.VarChar(100)
  description String @db.Text
  priority    String @db.VarChar(10)
  due_date    String @db.VarChar(100)
  status      String @db.VarChar(20)

  user_id Int

  user User @relation(fields: [user_id], references: [id], onDelete: Cascade, onUpdate: Cascade)

  @@map("todos")
}

model Post {
  id         Int      @id @default(autoincrement())
  user_id    Int
  content    String   @db.Text
  image      String?  @db.VarChar(500)
  created_at DateTime @default(now())

  user     User      @relation(fields: [user_id], references: [id], onDelete: Cascade, onUpdate: Cascade)
  comments Comment[]

  @@map("posts")
}

model Comment {
  id         Int      @id @default(autoincrement())
  post_id    Int
  content    String   @db.Text
  created_at DateTime @default(now())

  post         Post          @relation(fields: [post_id], references: [id], onDelete: Cascade, onUpdate: Cascade)
  commentVotes CommentVote[]

  @@map("comments")
}

model Vote {
  id        Int    @id @default(autoincrement())
  vote_type String @db.VarChar(10) // 'upvote' or 'downvote'

  commentVotes CommentVote[]

  @@map("votes")
}

model CommentVote {
  comment_id Int
  vote_id    Int

  comment Comment @relation(fields: [comment_id], references: [id], onDelete: Cascade, onUpdate: Cascade)
  vote    Vote    @relation(fields: [vote_id], references: [id], onDelete: Cascade, onUpdate: Cascade)

  @@id([comment_id, vote_id])
  @@map("comment_votes")
}

model Company {
  id          Int      @id @default(autoincrement())
  name        String   @db.VarChar(150)
  description String?  @db.Text
  email       String   @unique @db.VarChar(150)
  password    String   @db.VarChar(100)
  created_at  DateTime @default(now())

  events Event[]

  @@map("companies")
}

model Event {
  id               Int      @id @default(autoincrement())
  title            String   @db.VarChar(100)
  description      String   @db.Text
  event_date       DateTime
  company_id       Int
  registered_quota Int
  created_at       DateTime @default(now())

  company            Company             @relation(fields: [company_id], references: [id], onDelete: Cascade, onUpdate: Cascade)
  eventRegistrations EventRegistration[]

  @@map("events")
}

model EventRegistration {
  user_id  Int
  event_id Int

  user  User  @relation(fields: [user_id], references: [id], onDelete: Cascade, onUpdate: Cascade)
  event Event @relation(fields: [event_id], references: [id], onDelete: Cascade, onUpdate: Cascade)

  @@id([user_id, event_id])
  @@map("event_registrations")
}

model Bounty {
  id          String   @id @default(uuid())
  title       String   @db.VarChar(200)
  company     String   @db.VarChar(150)
  deadline    DateTime
  rewardXp    Int      @map("reward_xp")
  rewardMoney Int      @map("reward_money")
  status      String   @db.VarChar(20)
  created_at  DateTime @default(now())

  bountyAssignments BountyAssignment[]

  @@map("bounties")
}

model BountyAssignment {
  user_id       Int
  bounty_id     String
  assigned_at   DateTime @default(now())
  is_completed  Boolean  @default(false)
  completed_at  DateTime?

  user   User   @relation(fields: [user_id], references: [id], onDelete: Cascade, onUpdate: Cascade)
  bounty Bounty @relation(fields: [bounty_id], references: [id], onDelete: Cascade, onUpdate: Cascade)

  @@id([user_id, bounty_id])
  @@map("bounty_assignments")
}